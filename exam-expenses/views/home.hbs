{{#if isLoggedIn}}
        <section class="actions">
                <form action="/user/refill" method="POST">
                        <h2>Salary time? Refill your account amount.</h2>
                        <input type="text" id="refill-amount" name="amount">
                        <button type="submit">Refill</button>
                </form>
                <div>
                        <h2>New expense comming up?</h2>
                        <a href="/expense/create">Add it now</a>
                </div>
        </section>
        
        {{#if expenses}}

        <table class="expenses">
                <thead>
                        <tr>
                        <th>Date</th>
                        <th>Merchant</th>
                        <th>Amount</th>
                        <th>Category</th>
                        <th>Description</th>
                        </tr>

                </thead>
                <tbody>
                {{#each expenses}}
                        <tr>
                        <td>
                                <img src="/images/date.png" />
                                <p>{{this.date}}</p>
                        </td>
                        <td>
                                <p>{{this.merchant}}</p>

                                {{#if this.report}}
                                <div class="report">
                                <a href="/expense/report/{{_id}}">Report</a>
                                {{/if}}
                                </div>
                        </td>
                        <td>
                                <img src="/images/amount.png" alt="">
                                <p>{{this.total}}</p>
                        </td>
                        <td>
                                <img src="/images/category.png" alt="">
                                <p>{{this.category}}</p>
                        </td>
                        <td>
                                <img src="/images/hastag.png" alt="">
                                <p>{{this.description}}</p>
                        </td>
                        </tr>
                {{/each}}
                </tbody>
                </table>
        {{else}}
        <hr class="separator">
        <h1 class="no-expenses">No expenses founded so far.. <span>GOOD JOB!</span></h1>
        {{/if}}

{{else}}
<p class="guest-message">MoneyGone? The best expense tracker tool of all time!<br>–êre you new here? <a
                href="/user/register">Register</a> yourself!</p>
{{/if}}